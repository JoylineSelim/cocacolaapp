<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/freshmart_background">

    <!-- Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/freshmart_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Customer!"
                style="@style/FreshMartText.Subtitle"
                android:textColor="@color/text_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your branch to start shopping"
                style="@style/FreshMartText.Caption"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="@dimen/spacing_xs"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_lg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Branch Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FreshMartCard"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Branch"
                        style="@style/FreshMartText.Subtitle"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Choose your branch"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/freshmart_primary"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerBranch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/text_primary"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Start Shopping Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartShopping"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="START SHOPPING"
                        style="@style/FreshMartButton.Secondary"
                        app:icon="@drawable/ic_shopping"
                        app:iconGravity="textStart"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FreshMartCard"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Products"
                        style="@style/FreshMartText.Subtitle"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_sm">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/product_coke"
                                android:contentDescription="Coke"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coke"
                                style="@style/FreshMartText.Caption"
                                android:layout_marginTop="@dimen/spacing_xs"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_sm">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/product_fanta"
                                android:contentDescription="Fanta"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fanta"
                                style="@style/FreshMartText.Caption"
                                android:layout_marginTop="@dimen/spacing_xs"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_sm">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/product_sprite"
                                android:contentDescription="Sprite"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sprite"
                                style="@style/FreshMartText.Caption"
                                android:layout_marginTop="@dimen/spacing_xs"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="@dimen/spacing_lg"
        android:text="LOGOUT"
        android:backgroundTint="@color/status_out_of_stock"
        app:cornerRadius="@dimen/button_corner_radius"/>

</LinearLayout>
