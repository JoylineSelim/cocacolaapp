<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/FreshMartCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_product"
            android:background="@color/freshmart_background"/>

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coca-Cola Classic"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KSh 50.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/freshmart_primary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: KSh 150.00"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Right Side Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Remove Button -->
            <ImageButton
                android:id="@+id/btnRemove"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/status_out_of_stock"
                android:contentDescription="Remove"
                android:layout_marginBottom="8dp"/>

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_quantity_controls"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_minus"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/freshmart_primary"
                    android:contentDescription="Decrease"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_plus"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/freshmart_primary"
                    android:contentDescription="Increase"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>