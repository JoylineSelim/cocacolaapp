<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/spacing_lg"
    android:background="@color/freshmart_background">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/freshmart_white"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>
    </com.google.android.material.card.MaterialCardView>
    <!-- Welcome Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FreshMartCard"
        android:layout_marginBottom="@dimen/spacing_lg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding"
            android:gravity="center">

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coca-Cola"
                style="@style/FreshMartText.Title"
                android:textColor="@color/freshmart_primary"
                android:layout_marginBottom="@dimen/spacing_xs"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribution System"
                style="@style/FreshMartText.Subtitle"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_sm"/>

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your branches seamlessly"
                style="@style/FreshMartText.Caption"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_lg"/>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="LOGIN"
                style="@style/FreshMartButton.Primary"
                android:layout_marginBottom="@dimen/spacing_md"
                app:icon="@drawable/ic_login"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm"/>

            <!-- Register Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="REGISTER"
                style="@style/FreshMartButton.Secondary"
                app:icon="@drawable/ic_register"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Footer Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by FreshMart"
        style="@style/FreshMartText.Caption"
        android:layout_marginTop="@dimen/spacing_lg"/>

</LinearLayout>