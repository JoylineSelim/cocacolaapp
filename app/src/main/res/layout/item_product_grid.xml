<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/FreshMartCard.Product"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_product"
                android:background="@color/freshmart_background"/>

            <TextView
                android:id="@+id/tvStockBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_stock_badge"
                style="@style/StockBadge"
                android:text="In Stock"
                android:visibility="visible"/>

            <FrameLayout
                android:id="@+id/soldOutOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sold_out"
                        android:tint="@color/white"
                        android:alpha="0.9"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOLD OUT"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca-Cola Classic"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_stock"
                    android:tint="@color/text_muted"/>

                <TextView
                    android:id="@+id/tvStockLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 units available"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="10sp"
                        android:textColor="@color/text_muted"/>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KSh 50.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:textColor="@color/coke_red"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddToCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add to Cart"
                        android:textSize="12sp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_cart"
                        app:iconSize="14dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="@color/coke_red"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/quantityControls"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_badge"
                        android:backgroundTint="#F3F4F6"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/btnMinus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_minus"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/coke_red" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:text="1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_main"/>

                        <ImageButton
                            android:id="@+id/btnPlus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_plus"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/coke_red" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>