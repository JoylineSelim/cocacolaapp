<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/freshmart_background">

    <!-- Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/freshmart_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Admin!"
                style="@style/FreshMartText.Subtitle"
                android:textColor="@color/text_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your distribution network"
                style="@style/FreshMartText.Caption"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="@dimen/spacing_xs"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_lg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Reports Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FreshMartCard"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Reports"
                        style="@style/FreshMartText.Subtitle"
                        android:layout_marginBottom="@dimen/spacing_sm"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View detailed sales analytics"
                        style="@style/FreshMartText.Caption"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewReport"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="VIEW SALES REPORT"
                        style="@style/FreshMartButton.Primary"
                        app:icon="@drawable/ic_chart"
                        app:iconGravity="textStart"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Inventory Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FreshMartCard"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦ Inventory"
                        style="@style/FreshMartText.Subtitle"
                        android:layout_marginBottom="@dimen/spacing_sm"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage stock across all branches"
                        style="@style/FreshMartText.Caption"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRestock"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="RESTOCK BRANCHES"
                        style="@style/FreshMartButton.Secondary"
                        app:icon="@drawable/ic_inventory"
                        app:iconGravity="textStart"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FreshMartCard"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch Overview"
                        style="@style/FreshMartText.Subtitle"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Nairobi (HQ)\nâ€¢ Kisumu\nâ€¢ Mombasa\nâ€¢ Nakuru\nâ€¢ Eldoret"
                        style="@style/FreshMartText.Body"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="@dimen/spacing_lg"
        android:text="LOGOUT"
        android:backgroundTint="@color/status_out_of_stock"
        app:cornerRadius="@dimen/button_corner_radius"/>

</LinearLayout>